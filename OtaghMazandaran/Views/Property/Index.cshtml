@model IEnumerable<DataLayer.Models.Property>
@{
    ViewData["Title"] = "لیست اموال";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header heading-color">
            @ViewData["Title"]
            <a class="btn btn-outline-success" asp-controller="Property" asp-action="Create">افزودن</a>
        </h5>
        <form method="get">
            <input type="hidden" name="id" value="@ViewBag.Place" />
            <div class="row text-center m-4">
                <div class="col-1">
                    <h6>جست وجو</h6>
                </div>
                <div class="col-4">
                    <input class="form-control w-100" name="PropertyName" type="text" placeholder="نام کالا" />
                </div>
                <div class="col-4">
                    <input class="form-control w-100" name="NewPropertyNumber" type="text" placeholder="شماره اموال جدید" />
                </div>
                <div class="col-3">
                    <input class="btn btn-primary me-2 w-100" type="submit" value="جستوجو" />
                </div>
            </div>
        </form>
        <div class="row m-4">
            <div class="col-3 text-center">
                <h6>تعداد نتیجه</h6>
            </div>
            <div class="col-9">
                <label class="text text-start">@Model.Count().ToString("n0")</label>
            </div>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>نام</th>
                        <th>مکان</th>
                        <th>شماره اموال جدید</th>
                        <th>آپدیت</th>
                        <th>عمل‌ها</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (DataLayer.Models.Property item in Model)
                    {
                        <tr>
                            <td>@item.PropertyId</td>
                            <td>@item.PropertyName</td>
                            <td>@item.Place.PlaceName</td>
                            <td>@item.NewPropertyNumber</td>
                            <td>@item.UpdatedDate.ToShamsi()</td>
                            <td>
                                <a class="btn btn-warning" asp-controller="Property" asp-action="Edit" asp-route-id="@item.PropertyId"><i class="bx bx-edit-alt me-1"></i> ویرایش</a>
                                <a class="btn btn-danger" asp-controller="Property" asp-action="Delete" asp-route-id="@item.PropertyId"><i class="bx bx-trash me-1"></i> حذف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

