@model DataLayer.Models.AdminUser

@{
    ViewData["Title"] = "ویرایش حساب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header heading-color">جزئیات پروفایل</h5>
                <!-- Account -->
                <div class="card-body">
                    <div class="d-flex align-items-start align-items-sm-center gap-4">
                        <img src="~/img/admin/@Model.UserImage" alt="user-avatar" class="d-block rounded" height="100" width="100" id="uploadedAvatar">
                        <div class="button-wrapper">
                            <form asp-controller="Admin" asp-action="ChangeMyPhoto" method="post" enctype="multipart/form-data" id="ChngeImgFrm">
                                @Html.AntiForgeryToken()
                                <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                                    <span class="d-none d-sm-block">ارسال تصویر جدید</span>
                                    <i class="bx bx-upload d-block d-sm-none"></i>
                                    <input type="file" id="upload" class="account-file-input" onchange="document.getElementById('ChngeImgFrm').submit()"
                                           name="ImgUp" hidden accept="image/png, image/jpeg">
                                </label>
                            </form>
                            @if (Model.UserImage != "Default.png")
                            {
                                <form asp-controller="Admin" asp-action="DeleteMyPhoto" method="POST">
                                    <button type="submit" class="btn btn-label-secondary account-image-reset mb-4">
                                        <i class="bx bx-reset d-block d-sm-none"></i>
                                        <span class="d-none d-sm-block">بازنشانی</span>
                                    </button>
                                </form>
                            }
                            <p class="mb-0">فایل‌های JPG، GIF یا PNG مجاز هستند. حداکثر اندازه فایل 800KB.</p>
                        </div>
                    </div>
                </div>
                <hr class="my-0">
                <div class="card-body">
                    <div class="mb-3 col-12 mb-0 alert alert-danger" asp-validation-summary="All"></div>
                    <form method="POST" asp-controller="Admin" asp-action="EditMe">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control" autofocus />
                                <span asp-validation-for="FullName"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="Phone" class="form-label"></label>
                                <input asp-for="Phone" class="form-control text-start" />
                                <span asp-validation-for="Phone"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="UserName" class="form-label"></label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="mb-3 col-md-6 form-check-inline">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label"></label>
                                <span asp-validation-for="IsActive"></span>
                            </div>
                        </div>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-primary me-2">ذخیره تغییرات</button>
                            <button type="reset" class="btn btn-label-secondary">انصراف</button>
                        </div>
                    </form>
                </div>
                <!-- /Account -->
            </div>
            <div class="card">
                <h5 class="card-header heading-color">حذف حساب</h5>
                <div class="card-body">
                    <div class="mb-3 col-12 mb-0">
                        <div class="alert alert-warning">
                            <h6 class="alert-heading mb-1">آیا از حذف حساب خود اطمینان دارید؟</h6>
                            <p class="mb-0">در صورتی که حساب خود را حذف کنید، بازگشتی وجود نخواهد داشت. لطفا مطمئن باشید.</p>
                        </div>
                    </div>
                    <form asp-controller="Admin" asp-action="DeleteMe">
                        @Html.AntiForgeryToken()
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="accountActivation" onchange="SetActiveBtn()">
                            <label class="form-check-label" for="accountActivation">من خذف کردن حساب خود را تایید می‌کنم</label>
                        </div>
                        <button type="submit" id="SubmitBtn" disabled class="btn btn-danger deactivate-account">حذف کردن حساب</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function SetActiveBtn(){
            document.getElementById('SubmitBtn').disabled = !document.getElementById('accountActivation').checked;
        }
    </script>
}

