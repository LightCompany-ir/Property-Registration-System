@model IEnumerable<DataLayer.Models.AdminUser>

@{
    ViewData["Title"] = "لیست کاربران";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header heading-color">@ViewData["Title"]</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>نام کامل</th>
                        <th>شماره همراه</th>
                        <th>تصویر</th>
                        <th>وضعیت</th>
                        <th>عمل‌ها</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (DataLayer.Models.AdminUser item in Model)
                    {
                        <tr>
                            <td>@item.AdminUserId</td>
                            <td>@item.FullName</td>
                            <td>@item.Phone</td>
                            <td>
                                <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                    <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top" class="avatar avatar-xs pull-up" title="تونی استارک">
                                        <img src="~/img/admin/@item.UserImage" alt="آواتار" class="rounded-circle">
                                    </li>
                                </ul>
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-label-success me-1">فعال</span>
                                }
                                else
                                {
                                    <span class="badge bg-label-danger me-1">غیرفعال</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-warning" asp-controller="Admin" asp-action="AdminUser" asp-route-id="@item.AdminUserId"><i class="bx bx-edit-alt me-1"></i></a>
                                <a class="btn btn-danger" asp-controller="Admin" asp-action="AdminDelete" asp-route-id="@item.AdminUserId"><i class="bx bx-trash me-1"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

