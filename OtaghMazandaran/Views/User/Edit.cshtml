@model DataLayer.Models.AdminUser
@{
    ViewData["Title"] = "ویرایش کاربر";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header heading-color">@ViewData["Title"]</h5>
                <form method="POST">
                    <!-- AdminUserId,FullName,UserName,Password,Phone,IsActive -->
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.AdminUserId)
                    <div class="card-body row">
                        <div class="col-6">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" placeholder="@Html.DisplayNameFor(model => model.FullName)">
                            <span asp-validation-for="FullName" class="form-text text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="UserName" class="form-label"></label>
                            <input asp-for="UserName" class="form-control" placeholder="@Html.DisplayNameFor(model => model.UserName)">
                            <span asp-validation-for="UserName" class="form-text text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Password)">
                            <span asp-validation-for="Password" class="form-text text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Phone)">
                            <span asp-validation-for="Phone" class="form-text text-danger"></span>
                        </div>
                        <div class="mb-3 col-md-6 form-check-inline">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                            <span asp-validation-for="IsActive"></span>
                        </div>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-primary me-2">ذخیره تغییرات</button>
                            <a asp-controller="User" asp-action="Index" class="btn btn-label-secondary">انصراف</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>