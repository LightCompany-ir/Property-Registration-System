@model DataLayer.Models.AdminUser
@{
    ViewData["Title"] = "حذف کاربر";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <h5 class="card-header heading-color">@ViewData["Title"]</h5>
                <div class="card-body">
                    @if (ViewBag.CanDelete == false)
                    {
                        <div class="mb-3 col-12 mb-0">
                            <div class="alert alert-danger">
                                <h6 class="alert-heading mb-1">امکان حذف وجود ندارد</h6>
                                <p class="mb-0">تعدادی اموال با این کاربر وجود دارد</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3 col-12 mb-0">
                            <div class="alert alert-warning">
                                <h6 class="alert-heading mb-1">آیا از حذف کاربر اطمینان دارید؟</h6>
                                <p class="mb-0">در صورتی که کاربر را حذف کنید، بازگشتی وجود نخواهد داشت. لطفا مطمئن باشید.</p>
                            </div>
                        </div>
                        <form asp-controller="User" asp-action="DeleteUser">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.AdminUserId)
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" id="accountActivation" onchange="SetActiveBtn()">
                                <label class="form-check-label" for="accountActivation">من خذف کردن کاربر را تایید می‌کنم</label>
                            </div>
                            <button type="submit" id="SubmitBtn" disabled class="btn btn-danger deactivate-account">حذف کردن کاربر</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function SetActiveBtn(){
            document.getElementById('SubmitBtn').disabled = !document.getElementById('accountActivation').checked;
        }
    </script>
}