@model IEnumerable<DataLayer.Models.Place>
@{
    ViewData["Title"] = "لیست مکان ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header heading-color">
            @ViewData["Title"]
            <a class="btn btn-outline-success" asp-controller="Place" asp-action="Create">افزودن</a>
        </h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>نام</th>
                        <th>عمل‌ها</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (DataLayer.Models.Place item in Model)
                    {
                        <tr>
                            <td>@item.PlaceId</td>
                            <td>@item.PlaceName</td>
                            <td>
                                <a class="btn btn-info" asp-controller="Property" asp-action="Index" asp-route-id="@item.PlaceId"><i class="bx bx-box me-1"></i> اموال</a>
                                <a class="btn btn-warning" asp-controller="Place" asp-action="Edit" asp-route-id="@item.PlaceId"><i class="bx bx-edit-alt me-1"></i> ویرایش</a>
                                <a class="btn btn-danger" asp-controller="Place" asp-action="Delete" asp-route-id="@item.PlaceId"><i class="bx bx-trash me-1"></i> حذف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>